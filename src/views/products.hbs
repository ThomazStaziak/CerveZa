<div class="site-section mt-5">
      <div class="container">

        <div class="row mb-5">
          <div class="col-12 section-title text-center mb-5">
            <h2 class="d-block">Nossos Produtos</h2>
            <p>Bebidas de Primeiríssima Qualidade! Deguste das melhores cervejas artesanais do Brasil!</p>
          </div>
        </div>

        <div class="row">
		{{#each info}}
          <div class="col-lg-4 mb-5 col-md-6">

            <div class="wine_v_1 text-center pb-4">
              <a href="/products/details/{{id}}" class="thumbnail d-block mb-4"><img src="../public/images/wine_2.png" alt="Image" class="img-fluid"></a>
              <div>
                <h3 class="heading mb-1"><a href="#">{{name}}</a></h3>
                <span class="price">{{ price }}</span>
              </div>


              <div class="wine-actions">

                <h3 class="heading-2"><a href="#">{{name}}</a></h3>
                <span class="price d-block">{{ price }}</span>

                <div class="rating">
                  <span class="icon-star"></span>
                  <span class="icon-star"></span>
                  <span class="icon-star"></span>
                  <span class="icon-star"></span>
                  <span class="icon-star-o"></span>
                </div>

                <a href="cart.html" class="btn add"><span class="icon-shopping-bag mr-3"></span> Add to Cart</a>
              </div>
            </div>

          </div>
		{{/each}}




        </div>
      </div>
    </div>

    <div class="hero-2" style="background-image: url('../public/images/hero_2.jpg');">
     <div class="container">
